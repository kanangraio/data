[ req ]
default_bits       = 2048
default_md         = sha256
prompt             = no
distinguished_name = req_distinguished_name
req_extensions     = req_ext

[ req_distinguished_name ]
CN = mysql57.docker  # Use your MySQL server hostname

[ req_ext ]
subjectAltName = @alt_names

[ alt_names ]
DNS.1 = mysql57.docker  # Match the hostname that will be used in Go

[ v3_ca ]
subjectAltName = @alt_names
